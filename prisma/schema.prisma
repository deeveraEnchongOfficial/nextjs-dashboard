generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(uuid())
  name     String
  email    String  @unique
  password String
}

model Customer {
  id        String  @id @default(uuid())
  name      String
  email     String  @unique
  imageUrl  String  @map("image_url")
  invoices  Invoice[]
}

model Invoice {
  id         String   @id @default(uuid())
  customerId String
  amount     Int
  status     String
  date       String
  customer   Customer @relation(fields: [customerId], references: [id])
}

model Revenue {
  month   String  @id
  revenue Int
}